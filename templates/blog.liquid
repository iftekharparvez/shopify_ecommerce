

    <div class="">
        <div class="max-w-[1240px] mx-auto py-6">
            <div class="border-t border-gray-200 mb-6 pt-10">
                <div class="flex text-gray-500 text-sm mb-6 ">
                    <a href="{{ routes.root_url }}" class="hover:text-gray-700">Home</a>
                    <span class="mx-2 text-gray-400">›</span>
                    <span class="text-black font-medium">{{ blog.title }}</span>
                </div>   
     
            </div>

            <!-- Blog Post Flex Layout -->
            <div class="flex flex-wrap gap-6">
                {% for article in blog.articles %}
                <!-- Blog Card -->
                <div class="bg-white p-4 rounded-lg shadow-sm w-full sm:w-[48%] md:w-[31%]">
                    <!-- Blog Image -->
                    {% if article.image %}
                        <a href="{{ article.url }}">
                            <img src="{{ article.image | img_url: '600x400' }}" alt="{{ article.title }}" class="w-full h-52 object-cover rounded-lg">
                        </a>
                    {% endif %}
        
                    <!-- Blog Title -->
                    <h3 class="mt-4 font-semibold text-lg">
                        <a href="{{ article.url }}" class="hover:underline">{{ article.title }}</a>
                    </h3>
        
                    <!-- Date & Author -->
                    <p class="text-gray-500 text-sm mt-1">
                        Posted on {{ article.published_at | date: "%B %d, %Y" }} by {{ article.author }}
                    </p>
        
                    <!-- Blog Excerpt -->
                    <p class="text-gray-600 mt-2">{{ article.excerpt_or_content | strip_html | truncate: 100 }}</p>
        
                    <!-- Read More Button -->
                    <a href="{{ article.url }}" class="mt-3 inline-block text-blue-600 font-medium hover:underline">
                        Read More →
                    </a>
                </div>
                {% endfor %}
            </div>
        
            <!-- Pagination -->
            <div class="mt-8 flex justify-center">
                {% if paginate.pages > 1 %}
                    <nav class="flex space-x-2">
                        {% if paginate.previous %}
                            <a href="{{ paginate.previous.url }}" class="px-4 py-2 bg-gray-200 text-gray-700 rounded-md">Previous</a>
                        {% endif %}
        
                        {% for part in paginate.parts %}
                            {% if part.is_link %}
                                <a href="{{ part.url }}" class="px-4 py-2 bg-gray-200 text-gray-700 rounded-md">{{ part.title }}</a>
                            {% else %}
                                <span class="px-4 py-2 bg-black text-white rounded-md">{{ part.title }}</span>
                            {% endif %}
                        {% endfor %}
        
                        {% if paginate.next %}
                            <a href="{{ paginate.next.url }}" class="px-4 py-2 bg-gray-200 text-gray-700 rounded-md">Next</a>
                        {% endif %}
                    </nav>
                {% endif %}
            </div>

        </div>
    </div>


    <div class="max-w-6xl mx-auto p-6">
        <!-- Blog Title -->
        <h1 class="text-3xl font-bold text-center mb-8">{{ blog.title }}</h1>
    

    </div>
    