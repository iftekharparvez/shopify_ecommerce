<div class="max-w-[1240px] mx-auto border-t border-gray-200 pt-6">
    <!-- Section Title -->
    <div class="flex text-gray-500 text-sm mb-6 ">
        <a href="{{ routes.root_url }}" class="hover:text-gray-700">Home</a>
        <span class="mx-2 text-gray-400">›</span>
        <span class="text-black font-medium">{{ collection.title }}</span>
    </div> 


    <div class="flex mb-6 pb-6">
        <div class="w-3/12 pb-24">
            <div class="border border-gray-200 rounded-xl p-4">
                <div class="flex justify-between border-b border-gray-200 mb-6 pb-4">
                    
                    <span class="text-black text-lg font-bold">Filters </span>
                    <img src="{{ 'filter.png' | asset_url }}"/>

                </div>
                <ul class="leading_ten">

                    {% assign menu_items = "T-shirts, Hoodies, Jackets, Pants, Shoes" | split: "," %}
    
                    {% for item in menu_items %}
                        <li>
                            <a class="flex justify-between items-center pb-6" href="#">
                                {{ item }} <span>›</span>
                            </a>
                        </li>
                    {% endfor %}

                </ul>
                
                <div class="mb-4">
                    <div data-id="filter-color" class="flex justify-between border-t border-gray-200 mb-6 pt-4">
                    
                        <span class="text-black text-lg font-bold">Colors </span>
                        <svg class="w-4 h-6 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 8">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7 7.674 1.3a.91.91 0 0 0-1.348 0L1 7"></path>
                        </svg>

                    </div>


                    {% assign colors = "#50d71e,#ff0000,#ffeb00,#ff7f00,#00c8ff,#0047ff,#8000ff,#ff1493,#ffffff,#000000" | split: "," %}
                    <div id="filter-color"  class="flex flex-wrap gap-4">
                        {% for color in colors %}
                            <div class="h-[37px] w-[37px] rounded-full border-2 border-gray-300 cursor-pointer hover:scale-105 transition"
                                style="background-color: {{ color }};">
                            </div>
                        {% endfor %}
                    </div>

                </div>
                
                <div class="mb-4">
                    <div class="flex justify-between border-t border-gray-200 mb-6 pt-4">
                        <span class="text-black text-lg font-bold">Size </span>
                        <svg class="w-4 h-6 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 8">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7 7.674 1.3a.91.91 0 0 0-1.348 0L1 7"></path>
                        </svg>
                    </div>

                    <div class="flex flex-wrap gap-4 max-w-xs">
                        <button class="px-6 py-2 bg-gray-200 text-gray-700 rounded-full">XX-Small</button>
                        <button class="px-6 py-2 bg-gray-200 text-gray-700 rounded-full">X-Small</button>
                        <button class="px-6 py-2 bg-gray-200 text-gray-700 rounded-full">Small</button>
                        <button class="px-6 py-2 bg-gray-200 text-gray-700 rounded-full">Medium</button>
                        <button class="px-6 py-2 bg-black text-white rounded-full">Large</button> <!-- Selected -->
                        <button class="px-6 py-2 bg-gray-200 text-gray-700 rounded-full">X-Large</button>
                        <button class="px-6 py-2 bg-gray-200 text-gray-700 rounded-full">XX-Large</button>
                        <button class="px-6 py-2 bg-gray-200 text-gray-700 rounded-full">3X-Large</button>
                        <button class="px-6 py-2 bg-gray-200 text-gray-700 rounded-full">4X-Large</button>
                    </div>
                    
                </div>
                <div class="mb-4">
                    <div class="flex justify-between border-t border-gray-200 mb-6 pt-4">
                        <span class="text-black text-lg font-bold">Dress Style </span>
                        <svg class="w-4 h-6 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 8">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7 7.674 1.3a.91.91 0 0 0-1.348 0L1 7"></path>
                        </svg>
                    </div>
                    <ul>

                        {% assign menu_items = "T-shirts, Hoodies, Jackets, Pants, Shoes" | split: "," %}
        
                        {% for item in menu_items %}
                            <li>
                                <a class="flex justify-between items-center pb-6" href="#">
                                    {{ item }} <span>›</span>
                                </a>
                            </li>
                        {% endfor %}
    
                    </ul>
                </div>



            </div>
        </div>

        <div class="w-9/12 pl-8">
            <!-- Product Grid -->
            <h1 class="text-lg font-bold pb-6">{{ collection.title }}</h1>
            <div class="flex flex-wrap gap-6 pb-24">
    
                {% for product in collection.products %}
                <!-- Product Card -->
                <div class="rounded-lg w-full sm:w-[48%] md:w-[31%]">
                    <!-- Product Image -->
                    <a href="{{ product.url }}">
                        <img src="{{ product.featured_image | img_url: '400x400' }}" alt="{{ product.title }}" class="w-full rounded-md">
                    </a>
            
                    <!-- Product Name -->
                    <h3 class="mt-3 font-semibold text-lg">
                        <a href="{{ product.url }}" class="hover:underline">{{ product.title }}</a>
                    </h3>
            
                    <!-- Star Ratings (Static for now, can integrate with a review app) -->
                    <div class="flex items-center text-yellow-400 text-sm mt-1">
                        ★★★★☆ <span class="text-gray-500 ml-2">4.5/5</span>
                    </div>
            
                    <!-- Price Handling -->
                    <div class="flex items-center mt-2">
                        <span class="text-xl font-semibold">{{ product.price | money }}</span>
            
                        {% if product.compare_at_price > product.price %}
                            <span class="text-gray-400 line-through ml-2">{{ product.compare_at_price | money }}</span>
                            <span class="text-red-500 text-sm font-medium bg-red-100 px-2 py-1 rounded ml-2">
                                -{{ product.compare_at_price | minus: product.price | times: 100.0 | divided_by: product.compare_at_price | round }}%
                            </span>
                        {% endif %}
                    </div>
                </div>
                {% endfor %}
            
            </div>
            

        </div>


    </div>









</div>
