<!-- New Arrivals Section -->
<section class="max-w-[1240px] mx-auto py-12 px-6 md:px-0">
    <h2 class="text-center text-5xl pb-6 font-extrabold">NEW ARRIVALS</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 mt-8">
        <!-- Product 1 -->

        
        {% for product in collections.all.products limit: 4 %}
            {% assign image_name = 'p' | append: forloop.index | append: '.png' %}
            <div>
                <img src="{{ image_name | asset_url }}" alt="T-shirt" class="rounded-xl h-[300px] w-full object-cover">
                <p class="mt-4 font-semibold">T-shirt with Tape Details</p>
                <div class="text-black flex items-center space-x-2">
                    <img src="{{ 'review1.png' | asset_url }}" alt="">
                    <span>4.5/5</span>
                </div>
                <p class="text-lg font-bold mt-2">$120</p>
            </div>
        {% endfor %}
        

        
    </div>
    <div class="text-center mt-8">
        <button class="px-[70px] py-[12px] border border-gray-300 rounded-full hover:bg-black hover:text-white transition">View All</button>
    </div>
</section>


