

    <!-- Footer Section -->
    <footer class="bg-gray-100 pb-16 pt-[50px] relative">
      <!-- Newsletter Section -->
      <div class="absolute top-[-18%] left-1/2 transform -translate-x-1/2 w-full max-w-[1240px] px-6 md:px-0">
          <section class="bg-black text-white py-8 rounded-xl w-full">
              <div class="max-w-[1240px] mx-auto flex flex-col md:flex-row items-center justify-between px-6 text-center md:text-left">
                  <!-- Text Section -->
                  <h2 class="text-2xl md:text-4xl font-extrabold">STAY UP TO DATE ABOUT <br> OUR LATEST OFFERS</h2>
                  
                  <!-- Subscription Form -->
                  <form action="" method="">
                      <div class="flex flex-col space-y-4 w-full md:w-auto mt-4 md:mt-0">
                          <div class="relative">
                              <input type="email" placeholder="Enter your email address" class="w-full md:w-[350px] px-12 py-3 rounded-full text-black bg-white focus:outline-none">
                              <span class="absolute left-4 top-3 text-gray-500"><img src="{{ 'mail.png' | asset_url }}" alt=""></span>
                          </div>
                          <button class="w-full md:w-[350px] py-3 bg-white text-black rounded-full font-semibold hover:bg-gray-200 transition">Subscribe to Newsletter</button>
                      </div>
                   </form>
              </div>
          </section>
      </div>
  
      <div class="max-w-[1240px] mx-auto grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-8 px-6 md:px-0 mt-24">
          <!-- Shop Info -->
          <div>
              <h1 class="mb-4"><img src="{{ 'logo.png' | asset_url }}" alt=""></h1>
              <p class="text-gray-600">We have clothes that suit your style and which you're proud to wear.</p>

              {% assign social_media = "twitter, fb, instagram, github" | split: ", " %}
              <div class="flex space-x-4 mt-4">
                  {% for platform in social_media %}
                      {% if platform == "fb" %}
                          {% assign button_class = "bg-black text-white" %}
                      {% else %}
                          {% assign button_class = "bg-white text-black" %}
                      {% endif %}
                      
                      <a href="#" class="w-8 h-8 flex items-center justify-center {{ button_class }} rounded-full border">
                          <img src="{{ platform | append: '.png' | asset_url }}" alt="{{ platform }}">
                      </a>
                  {% endfor %}
              </div>
              

              
          </div>
          
          <!-- Footer Links -->
          {% assign sections = "COMPANY, HELP, FAQ, RESOURCES" | split: ", " %}
          {% for section in sections %}
            <div>
                <h3 class="text-black mb-2">{{ section }}</h3>
                <ul class="text-gray-600 space-y-2">
                    <li><a href="#">About</a></li>
                    <li><a href="#">Features</a></li>
                    <li><a href="#">Works</a></li>
                    <li><a href="#">Career</a></li>
                </ul>
            </div>
          {% endfor %}

      </div>
      
      <!-- Footer Bottom -->
      <div class="max-w-[1240px] mx-auto mt-8 border-t pt-6 flex flex-col md:flex-row justify-between items-center px-6 md:px-0 text-center md:text-left">
          <p class="text-gray-600">Shop.co Â© 2000-2023, All Rights Reserved</p>
          {% assign payment_methods = "Visa, Mastercard, Paypal, Pay, Gpay" | split: ", " %}

          <div class="flex space-x-4 mt-4 md:mt-0">
              {% for method in payment_methods %}
                  <img src="{{ method | append: '.png' | asset_url }}" alt="{{ method }}" class="h-10 w-auto bg-white rounded-lg p-3 shadow-md">
              {% endfor %}
          </div>
          
      </div>
  </footer>
