<section class="max-w-[1240px] mx-auto py-12 bg-gray-200 rounded-2xl p-10">
    <h2 class="text-center text-5xl pb-6 font-extrabold">BROWSE BY DRESS STYLE</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-3 gap-4 mt-8">
        {% assign dress_styles = "s1.png:Casual,s2.png:Formal,s3.png:Party,s4.png:Gym" | split: "," %}
        
        {% for style in dress_styles %}
            {% assign style_parts = style | split: ":" %}
            <div class="bg-white p-4 rounded-xl relative flex items-center justify-center overflow-hidden h-[289px] {% if forloop.index == 2 or forloop.index == 3 %}col-span-2{% endif %}">
                <img src="{{ style_parts[0] | asset_url }}" alt="{{ style_parts[1] }}" class="absolute w-full h-full object-cover">
                <span class="absolute top-4 left-4 text-black font-bold text-4xl">{{ style_parts[1] }}</span>
            </div>
        {% endfor %}
    </div>
</section>
