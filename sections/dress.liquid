<section class="max-w-[1240px] mx-auto py-12 bg-gray-200 rounded-2xl p-10">
    <h2 class="text-center text-5xl pb-6 font-extrabold">BROWSE BY DRESS STYLE</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-3 gap-4 mt-8">
        {% assign collection_list = collections | sort: 'title' %} 

        {% for collection in collection_list limit: 4 %}
            <div class="bg-white p-4 rounded-xl relative flex items-center justify-center overflow-hidden h-[289px] 
                {% if forloop.index == 2 or forloop.index == 3 %} col-span-2 {% endif %}">
        
                <!-- Collection Image (Keeping Your Design) -->
                {% if collection.image %}
                    <img src="{{ collection.image | img_url: '600x600' }}" alt="{{ collection.title }}" class="absolute w-full h-full object-cover">
                {% else %}
                    <img src="{{ collection.products.first.featured_image | img_url: '600x600' }}" alt="{{ collection.title }}" class="absolute w-full h-full object-cover">
                {% endif %}
        
                <!-- Overlay for Text Background -->
                <div class="absolute top-4 left-4 bg-black/20 bg-opacity-20 px-4 py-2 rounded-lg">
                    <a href="{{ collection.url }}" class="text-white font-bold text-4xl">
                        {{ collection.title }}
                    </a>
                </div>
            </div>
        {% endfor %}
        
    </div>
</section>
