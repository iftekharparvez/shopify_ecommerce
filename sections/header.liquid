{% comment %}
  Shopify Header Section
{% endcomment %}

<header class="border-t">
    <!-- Top Banner -->
    {% if section.settings.show_banner %}
        <div class="bg-black top-banner">
            <div class="max-w-[1240px] mx-auto px-6 md:px-0">
                <div class="text-white text-center py-2 text-xs sm:text-sm flex justify-between items-center">
                    <p class="w-full">
                        {{ section.settings.banner_text }} 
                        <a href="{{ routes.account_register_url }}" class="underline">{{ section.settings.link_text }}</a>
                    </p>
                    <button class="text-white text-lg close-banner">&times;</button>
                </div>
            </div>
        </div>
    {% endif %}

    <!-- Header Section -->
    <div class="max-w-[1240px] mx-auto px-6 md:px-0 z-20 relative">
        <div class="flex items-center justify-between py-4">
            <!-- Mobile Menu Button -->
            <button id="menu-toggle" class="md:hidden text-2xl cursor-pointer">&#9776;</button>
            <!-- Logo -->
            <h1 class="text-[32px] font-bold text-black"><a href="{{ routes.root_url }}"><img src="{{ 'logo.png' | asset_url }}" alt="{{ shop.name }}"></a></h1>
            
            <!-- Navigation -->
            <nav class="hidden md:flex space-x-6 relative">

                {% for link in linklists.main-menu.links %}
                    <a href="{{ link.url }}" class="text-gray-700 hover:text-black mr-3">{{ link.title }}</a>
                {% endfor %}

            </nav>
            
            <!-- Search Bar -->
            <div class="flex-grow max-w-lg mx-4  hidden sm:block">
                <div class="relative">
                    <form action="{{ routes.search_url }}" method="get">
                        <input type="text" placeholder="Search for products..." class="w-full px-10 py-2 border rounded-full bg-gray-100 text-gray-700 focus:outline-none">
                        <span class="absolute left-3 top-2.5 text-gray-400"><img src="{{ 'search.png' | asset_url }}" alt="search"></span>
                    </form>
                </div>
            </div>

            <!-- Icons -->
            <div class="flex space-x-4">
                <a href="#" class="text-gray-700 hover:text-black text-xl"><img src="{{ 'cart.png' | asset_url }}" alt="cart"></a>
                <a href="#" class="text-gray-700 hover:text-black text-xl"><img src="{{ 'login.png' | asset_url }}" alt="login"></a>
            </div>
        </div>

        <!-- Mobile Menu -->
        <nav id="mobile-menu" class="hidden flex flex-col space-y-2 bg-white shadow-md rounded-lg p-4 absolute w-full left-0 top-16 md:hidden">
            {% for link in linklists.main-menu.links %}
                <a href="{{ link.url }}" class="block py-2 text-gray-700 hover:text-black">{{ link.title }}</a>
            {% endfor %}

        </nav>
    </div>

</header>

{% schema %}
{
    "name": "Top Banner",
    "settings": [
        {
            "type": "checkbox",
            "id": "show_banner",
            "label": "Show Banner",
            "default": true
        },
        {
            "type": "text",
            "id": "banner_text",
            "label": "Banner Text",
            "default": "Sign up and get 20% off your first order."
        },
        {
            "type": "text",
            "id": "link_text",
            "label": "Link Text",
            "default": "Sign Up Now"
        }
    ],
    "presets": [
        {
            "name": "Top Banner"
        }
    ]
}
{% endschema %}
